<?xml version="1.0" encoding="UTF-8"?>

<script xmlns="http://dtf.org/v1" name="filter">
    <info>
        <author>
            <name>Rodney Gomes</name>
            <email>rlgomes@yahoo-inc.com</email>
        </author>
        <description>Unit test for the filter tag.</description>
    </info>
   
    <local>
    	<createstorage id="OUTPUT" path="${dtf.xml.path}/output"/>
        <createstorage id="INPUT" path="${dtf.xml.path}/input"/>

        <import uri="storage://INPUT/perfutil.xml"/>
        <loadproperties uri="storage://INPUT/ut.properties"/>
        
        <property name="iterations" value="100000"/>
    </local>

    <record uri="storage://OUTPUT/unfiltered.txt">
        <for property="i" range="1..${iterations}">
            <event name="write.event">
                <attribute name="recordid" value="${i}"/>
                <attribute name="timestamp" value="${dtf.timestamp}"/>
                <attribute name="datestamp" value="${dtf.datestamp}"/>
                <attribute name="uid" value="${dtf.stream(random,16,${i})}"/>
                <attribute name="gid" value="${dtf.stream(random,16,${i})}"/>
            </event>
        </for>
    </record> 

    <log>start filtering.</log>
    <event name="total">
	    <filter srcuri="storage://OUTPUT/unfiltered.txt"
	            dsturi="storage://OUTPUT/filtered.txt"
	            event="write.event">
	        <select>
		        <field name="recordid" />
		        <field name="hash" />
	        </select>
	        <where>
                <and>
	               <lt op2="recordid" op1="50000"/>
	               <gt op2="recordid" op1="10000"/>
                </and>
	        </where>
	    </filter>
    </event>
    <log>done filtering.</log>
    
    <call function="calcEventPerf" result="ops_per_sec">
        <property name="iterations" value="${iterations}"/>
        <property name="event" value="total"/>
    </call>
    <log>events filtered/sec: ${ops_per_sec}</log>
    
</script>