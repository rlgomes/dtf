<?xml version="1.0" encoding="UTF-8"?>
<script xmlns="http://dtf.org/v1" name="sleep">
    <info>
        <author>
            <name>Rodney Gomes</name>
            <email>rlgomes@yahoo-inc.com</email>
        </author>
        <description>DTF sleep unit test.</description>
    </info>
    
    <local>
        <createstorage id="INPUT" path="${dtf.xml.path}/input"/>
        <loadproperties uri="storage://INPUT/ut.properties"/>
        
        <echo message="*** Sleep Unit Test ***"/>
        <sleep time="0s"/>
        
        <lockcomponent id="C1"/>
    </local>
    
    <component id="C1">
        <sleep time="${ut.sleep.time}"/>
    </component>
    
    <try>
        <sequence>
            <local>
                <sleep time="3xx"/>
            </local>
        </sequence>
        <catch exception="${dtf.ParseException}" property="message">
            <sequence>
                <local>
                    <echo>Caught Exception: ${message}</echo>
                </local>
            </sequence>
        </catch>
    </try>
    
    <try>
        <sequence>
            <local>
                <sleep time="-3s"/>
            </local>
        </sequence>
        <catch exception="${dtf.ParseException}" property="message">
            <sequence>
                <local>
                    <echo>Caught Exception: ${message}</echo>
                </local>
            </sequence>
        </catch>
    </try>
    
</script>
